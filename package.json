{
  "name": "ai-news-bot",
  "version": "0.1.0",
  "description": "Obsidian-friendly AI news pipeline (URL→Markdown) with Discord→GitHub Actions trigger. No paid APIs.",
  "type": "module",
  "engines": { "node": ">=24" },
  "scripts": {
    "init:dirs": "node -e \"const fs=require('fs');['news','sources','.cache'].forEach(d=>fs.mkdirSync(d,{recursive:true})); if(!fs.existsSync('sources/url_inbox.md')) fs.writeFileSync('sources/url_inbox.md',''); if(!fs.existsSync('.cache/seen.json')) fs.writeFileSync('.cache/seen.json','{}');\"",
    "build:news": "node scripts/build_ai_news.mjs",
    "smoke": "node scripts/smoke.mjs",
    "start:bot": "node bot/index.mjs",
    "pick:ai": "node scripts/pick_ai_week.mjs"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "dayjs": "^1.11.13",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "gray-matter": "^4.0.3",
    "he": "^1.2.0",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.0.0",
    "jsdom": "^24.0.0",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "rss-parser": "^3.13.0",
    "sanitize-filename": "^1.6.3",
    "turndown": "^7.2.0"
  }
}
